@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Social Garden Brand Colors */
    --sg-green: 142 76% 36%;
    --sg-green-light: 142 76% 46%;
    --sg-green-dark: 142 76% 26%;
    --sg-gray: 210 11% 15%;
    --sg-gray-light: 210 11% 25%;
    --sg-gray-lighter: 210 11% 95%;

    --background: 0 0% 100%;
    --foreground: var(--sg-gray);

    --card: 0 0% 100%;
    --card-foreground: var(--sg-gray);

    --popover: 0 0% 100%;
    --popover-foreground: var(--sg-gray);

    --primary: var(--sg-green);
    --primary-foreground: 0 0% 100%;

    --secondary: var(--sg-gray-lighter);
    --secondary-foreground: var(--sg-gray);

    --muted: var(--sg-gray-lighter);
    --muted-foreground: 215.4 16.3% 46.9%;

    --accent: var(--sg-green-light);
    --accent-foreground: 0 0% 100%;

    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;

    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: var(--sg-green);

    --radius: 0.5rem;

    --novel-highlight-default: #ffffff;
    --novel-highlight-purple: #f6f3f8;
    --novel-highlight-red: #fdebeb;
    --novel-highlight-yellow: #fbf4a2;
    --novel-highlight-blue: #c1ecf9;
    --novel-highlight-green: #acf79f;
    --novel-highlight-orange: #faebdd;
    --novel-highlight-pink: #faf1f5;
    --novel-highlight-gray: #f1f1ef;
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;

    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;

    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;

    --primary: 210 40% 98%;
    --primary-foreground: 222.2 47.4% 11.2%;

    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;

    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;

    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;

    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;

    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 212.7 26.8% 83.9%;

    --novel-highlight-default: #000000;
    --novel-highlight-purple: #3f2c4b;
    --novel-highlight-red: #5c1a1a;
    --novel-highlight-yellow: #5c4b1a;
    --novel-highlight-blue: #1a3d5c;
    --novel-highlight-green: #1a5c20;
    --novel-highlight-orange: #5c3a1a;
    --novel-highlight-pink: #5c1a3a;
    --novel-highlight-gray: #3a3a3a;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}


pre {
  background: #0d0d0d;
  border-radius: 0.5rem;
  color: #fff;
  font-family: "JetBrainsMono", monospace;
  padding: 0.75rem 1rem;

  code {
    background: none;
    color: inherit;
    font-size: 0.8rem;
    padding: 0;
  }

  .hljs-comment,
  .hljs-quote {
    color: #616161;
  }

  .hljs-variable,
  .hljs-template-variable,
  .hljs-attribute,
  .hljs-tag,
  .hljs-name,
  .hljs-regexp,
  .hljs-link,
  .hljs-name,
  .hljs-selector-id,
  .hljs-selector-class {
    color: #f98181;
  }

  .hljs-number,
  .hljs-meta,
  .hljs-built_in,
  .hljs-builtin-name,
  .hljs-literal,
  .hljs-type,
  .hljs-params {
    color: #fbbc88;
  }

  .hljs-string,
  .hljs-symbol,
  .hljs-bullet {
    color: #b9f18d;
  }

  .hljs-title,
  .hljs-section {
    color: #faf594;
  }

  .hljs-keyword,
  .hljs-selector-tag {
    color: #70cff8;
  }

  .hljs-emphasis {
    font-style: italic;
  }

  .hljs-strong {
    font-weight: 700;
  }
}

/* Social Garden Professional Styling */
@layer base {
  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-feature-settings: 'cv02', 'cv03', 'cv04', 'cv11';
    line-height: 1.6;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    line-height: 1.2;
    color: hsl(var(--sg-gray));
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    border-bottom: 3px solid hsl(var(--sg-green));
    padding-bottom: 0.5rem;
  }

  h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: hsl(var(--sg-green));
  }

  h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
    color: hsl(var(--sg-gray));
  }

  .prose {
    max-width: none;
  }

  /* Professional table styling for SOW pricing */
  .sow-table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-family: 'Inter', sans-serif;
    font-size: 0.875rem;
  }

  .sow-table th {
    background-color: hsl(var(--sg-green));
    color: white;
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    border: 1px solid hsl(var(--sg-green-dark));
  }

  .sow-table td {
    padding: 0.75rem 1rem;
    border: 1px solid hsl(var(--sg-gray-lighter));
    color: hsl(var(--sg-gray));
  }

  .sow-table tbody tr:nth-child(even) {
    background-color: hsl(var(--sg-gray-lighter));
  }

  .sow-table tbody tr:hover {
    background-color: hsl(var(--sg-green-light));
    color: white;
  }

  /* Professional document styling */
  .sow-document {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border-radius: 0.5rem;
  }

  .sow-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid hsl(var(--sg-green));
  }

  .sow-logo {
    max-width: 200px;
    height: auto;
    margin-bottom: 1rem;
  }

  /* Professional button styling */
  .sg-button {
    background-color: hsl(var(--sg-green));
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .sg-button:hover {
    background-color: hsl(var(--sg-green-dark));
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Professional form styling */
  .sg-input {
    border: 2px solid hsl(var(--sg-gray-lighter));
    border-radius: 0.375rem;
    padding: 0.5rem 0.75rem;
    font-family: 'Inter', sans-serif;
    transition: border-color 0.2s ease;
  }

  .sg-input:focus {
    outline: none;
    border-color: hsl(var(--sg-green));
    box-shadow: 0 0 0 3px rgba(142, 76, 36, 0.1);
  }
}
